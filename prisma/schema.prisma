generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model activity {
  id        Int                @id @default(autoincrement())
  name      String
  content   String             @db.LongText
  startDate DateTime
  endDate   DateTime
  location  String
  status    EnumActivityStatus @default(PUBLISHED)
  createdAt DateTime           @default(now())
  updatedAt DateTime           @default(now())
}

model joinactivity {
  id         Int            @id @default(autoincrement())
  userId     Int
  activityId Int
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @default(now())
  status     DiemDanhStatus @default(NOT_YET)

  @@index([activityId], map: "JoinActivity_activityId_fkey")
  @@index([userId], map: "JoinActivity_userId_fkey")
}

model user {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique(map: "User_email_key")
  password      String
  identifier    String
  role          String
  dateOfBirth   DateTime
  phoneNumber   String
  address       String
  indentifyCard String
  dateOfIssue   DateTime
  placeOfIssue  String
  unit          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}

enum EnumActivityStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum DiemDanhStatus {
  NOT_YET
  PRESENT
  ABSENT
  LATE
}
